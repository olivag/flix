<header>
  <h1>Sign In</h1>
</header>

<%= form_tag(session_path) do %>
  <fieldset>
    <ol>
      <li>
        <%= label_tag :email %>
        <%= email_field_tag :email, nil %>
      </li>
      <li>
        <%= label_tag :username %>
        <%= text_field_tag :username, nil %>
      </li>
      <li>
        <%= label_tag :password, "*Password" %>
        <%= password_field_tag :password, nil, required: true %>
      </li>
    </ol>
    <p>
      <%= submit_tag 'Sign In'%>    
    </p>
  </fieldset>
<% end %>

<p>
  No account yet? <%= link_to 'Sign up!', signup_path %>
</p>